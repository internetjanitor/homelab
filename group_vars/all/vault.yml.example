---
# Example vault file - copy to vault.yml and encrypt with ansible-vault
# ansible-vault create group_vars/all/vault.yml
# ansible-vault edit group_vars/all/vault.yml

# Cloudflare API token for Let's Encrypt DNS validation
# Create token at: https://dash.cloudflare.com/profile/api-tokens
# Required permissions: Zone:DNS:Edit for your domain
vault_cloudflare_api_token: "your-cloudflare-api-token-here"
vault_cloudflare_domain: "your-domain-here"

wireguard_tunnels:
  - interface_name: ''
    address: ''
    dns: ''
    private_key: ''
    public_key: ''
    endpoint: ''
    bridge: ''
    table: ''


samba_users:
  - { name: user, password: secret }
